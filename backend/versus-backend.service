[Unit]
Description=Versus Backend (Django via Gunicorn)
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/opt/versus/backend
EnvironmentFile=/etc/versus/backend.env
ExecStart=/opt/versus/venv/bin/gunicorn main.wsgi:application --bind 0.0.0.0:8000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target